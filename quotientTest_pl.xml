<?xml version='1.0' encoding='UTF-8'?>
<scene version="0.5.0">
    <integrator type="volpath">
        <integer name="rrDepth" value="5"/>
        <boolean name="hideEmitters" value="true"/>
    </integrator>

    <emitter type="sunsky">
        <float name="turbidity" value="$turbidity"/>
		<float name="latitude" value="$latitude"/>
        <float name="longitude" value="$longitude"/>
        <float name="timezone" value="$timezone"/>
		
		<integer name="year" value="$year"/>
		<integer name="month" value="$month"/>
		<integer name="day" value="$day"/>

        <float name="hour" value="$hour"/>
        <float name="minute" value="$minute"/>

		<float name="sunScale" value="$sunScale"/>
		<float name="skyScale" value="$skyScale"/>

    </emitter>

    <sensor type="perspective_rdist">
		<string name="fovAxis" value="x"/>
		<float name="fov" value="$fov"/>
		<string name="kc" value="-0.000776,-0.012030"/>

		<transform name="toWorld">
			<matrix value="-6.32009074e-01 3.81421015e-01  6.74598057e-01 -1.95597297e+01 5.25615099e-03 8.72582680e-01 -4.88438164e-01  6.43714192e+00 -7.74943161e-01  -3.05151563e-01 -5.53484978e-01  4.94516235e+00 0 0 0 1"/>
		</transform>

		<sampler type="ldsampler">
			<integer name="sampleCount" value="$sampleCount"/>
		</sampler>

		<film type="ldrfilm">
			<string name="pixelFormat" value="rgba"/>
			<integer name="width" value="$width"/>
			<integer name="height" value="$height"/>
			<boolean name="banner" value="false"/>
			<rfilter type="gaussian"/>
		</film>
	</sensor>


    <!-- Add car and road objects to scene below -->


<shape type="obj">
        <string name="filename" value="assets/ground.obj"/>
        <transform name="toWorld">
            <scale value="0.03"/>
            <rotate x="0" y="1" z="0" angle="315"/>
            <translate x="-2" y="0" z="1.26"/>
        </transform>

        <bsdf type="roughdiffuse">
            <spectrum name="reflectance" value="0.5"/>
            <float name="alpha" value="0.2"/>
        </bsdf>

    </shape></scene>