                </bsdf>
            </bsdf>
    
        </shape>
    </shape>
    

    <shape type="instance">
        <ref id="ground"/>
        <transform name="toWorld">
            <rotate x="0" y="1" z="0" angle="90" />
            <translate x="-12" y="0" z="0" />
        </transform>
    </shape>

    <shape type="obj">
        <string name="filename" value="../cars_test/meshes/mustang/1967-shelby-ford-mustang.obj" />
