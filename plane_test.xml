		<string name="kc" value="-0.000776,-0.012030" />

		<transform name="toWorld">
			<matrix value="  -6.32009074e-01 3.81421015e-01  6.74598057e-01 -1.95597297e+01
            5.25615099e-03 8.72582680e-01 -4.88438164e-01  6.43714192e+00 
            -7.74943161e-01  -3.05151563e-01 -5.53484978e-01  4.94516235e+00 
            0 0 0 1" />
		</transform>

		<sampler type="ldsampler">
			<integer name="sampleCount" value="16" />
		</sampler>

		<film type="ldrfilm">
			<string name="pixelFormat" value="rgba" />
			<integer name="width" value="2000" />
			<integer name="height" value="1500" />
			<boolean name="banner" value="false" />
			<rfilter type="gaussian" />
		</film>
	</sensor>

	<shape type="obj">
		<string name="filename" value="assets/ground.obj" />
		<transform name="toWorld">

		</transform>

		<bsdf type="diffuse">
			<!-- <texture name="reflectance" type="checkerboard">
				<float name="uscale" value="100" />
				<float name="vscale" value="100" />
			</texture> -->

			<spectrum name="reflectance" value="0.1"/>
		</bsdf>

	</shape>

	<!-- foreground left lane -->


